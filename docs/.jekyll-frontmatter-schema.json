{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Jekyll Post Frontmatter",
  "description": "Schema for validating Jekyll post frontmatter in sevenrad-stills documentation",
  "type": "object",
  "required": ["title", "date", "categories", "tags"],
  "properties": {
    "title": {
      "type": "string",
      "description": "Post title",
      "minLength": 1
    },
    "date": {
      "type": "string",
      "description": "Publication date in format YYYY-MM-DD HH:MM:SS +ZZZZ",
      "pattern": "^\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2} [+-]\\d{4}$"
    },
    "categories": {
      "type": "array",
      "description": "Post categories following Di√°taxis framework",
      "minItems": 1,
      "maxItems": 3,
      "items": {
        "type": "string",
        "enum": [
          "Guide",
          "Setup",
          "Tutorial",
          "Compression",
          "Degradr",
          "Operations",
          "Reference",
          "How-to",
          "Explanation"
        ]
      }
    },
    "tags": {
      "type": "array",
      "description": "Post tags for discoverability",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "pin": {
      "type": "boolean",
      "description": "Whether to pin this post to the top"
    },
    "toc": {
      "type": "boolean",
      "description": "Whether to show table of contents"
    },
    "image": {
      "type": "object",
      "description": "Featured image for the post",
      "required": ["path"],
      "properties": {
        "path": {
          "type": "string",
          "description": "Path to featured image",
          "pattern": "^/assets/img/"
        },
        "alt": {
          "type": "string",
          "description": "Alt text for image"
        }
      }
    }
  },
  "additionalProperties": false
}
